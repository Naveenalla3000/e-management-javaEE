<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <display-name>e-approval-system</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>org.naveenalla.e_management.controller.auth.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>org.naveenalla.e_management.controller.auth.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>apply</servlet-name>
        <servlet-class>org.naveenalla.e_management.controller.apply.Apply</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>apply</servlet-name>
        <url-pattern>/apply</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>org.naveenalla.e_management.controller.auth.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>viewall</servlet-name>
        <servlet-class>org.naveenalla.e_management.controller.apply.GetAllApps</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewall</servlet-name>
        <url-pattern>/viewall</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>myapps</servlet-name>
        <servlet-class>org.naveenalla.e_management.controller.apply.MyApps</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myapps</servlet-name>
        <url-pattern>/myapps</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>approve</servlet-name>
        <servlet-class>org.naveenalla.e_management.controller.apply.Accept</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>approve</servlet-name>
        <url-pattern>/approve</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>reject</servlet-name>
        <servlet-class>org.naveenalla.e_management.controller.apply.Reject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reject</servlet-name>
        <url-pattern>/reject</url-pattern>
    </servlet-mapping>
</web-app>